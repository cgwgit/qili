	//显示列表
	public function showList(){
    $where = '2>1';
    $post = I('post.');
    if(!empty($post['date'])){
      $where .= " AND `date` = '{$post['date']}'";
    }
    if(!empty($post['shenqingren'])){
      $where .= " AND `shenqingren` = '{$post['shenqingren']}'";
    }
    if(!empty($post['dept'])){
      $where .= " AND `dept` = '{$post['dept']}'";
    }
    if(!empty($post['leibie'])){
      $where .= " AND `leibie` = '{$post['leibie']}'";
    }
    if(session('utype') == 2){
      $where .= " AND `uid` =".session('uid');
    }
		 $model = M('qiye');
     $count = $model->join('tp_hetong on tp_hetong.qid=tp_qiye.id')->where($where)->count();
     $Page = new \Think\Page($count,10);
     $Page -> setConfig('prev','上一页');
     $Page -> setConfig('next','下一页');
     $Page -> setConfig('first','首页');
     $Page -> setConfig('last','末页');
     $Page -> lastSuffix = false;  //将末页从数字的显示方式切换成汉字提示
     $show = $Page->show();
     $list = $model->alias('qiye')->join('tp_hetong on tp_hetong.qid=qiye.id')->where($where)->limit($Page->firstRow.','.$Page->listRows)->order('qiye.id desc')->select();
  	 $this->assign('info', $list);
  	 $this->assign('page', $show);
  	 $this->display();
}
