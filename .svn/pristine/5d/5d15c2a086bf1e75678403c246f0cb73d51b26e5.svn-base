			$where['id'] = array('in', $aid);
			$result = M('qiye')->where($where)->delete();
      if($result){
        $result1 = M('hetong')->where(array('qid' => array('in',$aid)))->delete();
        if($result1){
           echo json_encode(array('code' => 1));exit;
